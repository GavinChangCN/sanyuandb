<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.gavin.springmvcdemo.dao.IMenusDao">

    <select id="getTitle" resultType="String" parameterType="int">
        SELECT m.title FROM menus m WHERE m.id=#{id}
    </select>

    <select id="getList" resultType="com.gavin.springmvcdemo.model.Menus">
        SELECT * FROM menus
    </select>

    <select id="getByTitle" resultType="com.gavin.springmvcdemo.model.Menus"
            parameterType="com.gavin.springmvcdemo.model.Menus">
        SELECT * FROM menus
        WHERE title=#{title}
    </select>

    <insert id="addMenu" keyProperty="id" useGeneratedKeys="true">
      <selectKey resultType="int" keyProperty="id" order="BEFORE">
          SELECT LAST_INSERT_ID()
      </selectKey>
        INSERT INTO menus (title) VALUES (#{menus.title})
    </insert>
</mapper>
